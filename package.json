{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "box-react": "^1.1.0",
    "consolev": "^1.0.6",
    "cross-env": "^5.2.0",
    "date-fns": "^1.30.1",
    "get-iconfont-svg": "^1.0.5",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.3",
    "mobx-react-devtools": "^6.1.1",
    "node-sass": "^4.12.0",
    "pre-commit": "^1.2.2",
    "preval.macro": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "typescript": "^3.4.5",
    "zent": "^6.6.5"
  },
  "devDependencies": {
    "jest-puppeteer": "^4.0.0",
    "node-sass": "^4.12.0"
  },
  "scripts": {
    "iconfont": "node scripts/iconfont.js",
    "start": "cross-env PORT=3002 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:integration": "jest -c integration/jest.config.js",
    "lint": "eslint src --ext .tsx,.ts,.jsx,.js --cache --fix --max-warnings=0",
    "stats": "npm run build -- --stats && npx webpack-bundle-analyzer build/bundle-stats.json"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "extends": "react-app",
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
